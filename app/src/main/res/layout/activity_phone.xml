<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">


            <RelativeLayout
                android:id="@+id/ll_group_menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/pos_back_white1"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="주문내역 전송하기"/>




            </RelativeLayout>









            <LinearLayout
                android:layout_below="@id/ll_group_menu"
                android:layout_above="@id/ll_order"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:weightSum="10"
                android:background="@drawable/pos_back_white2"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:weightSum="10"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="@color/keypad_text_color_n"
                        android:textSize="20sp"
                        android:text="고객님의 핸드폰 번호를 입력해주세요."/>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="27sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="음식이 완료될 시 문자 드립니다. 주문 정보를 받아보시겠어요?"/>


                    <EditText
                        android:id="@+id/tv_phone_num"
                        android:textSize="27sp"
                        android:gravity="center"
                        android:clickable="false"
                        android:focusable="false"
                        android:textColor="@color/black"
                        android:text=""
                        android:layout_width="550dp"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/dis_num"
                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:weightSum="4"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/t9_key_1"
                            android:textSize="23sp"
                            android:text="1"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:background="@drawable/num_back"/>

                        <Button
                            android:id="@+id/t9_key_2"
                            android:textSize="23sp"
                            android:text="2"
                            android:textColor="@color/black"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/num_back"/>

                        <Button
                            android:id="@+id/t9_key_3"
                            android:textSize="23sp"
                            android:text="3"
                            android:textColor="@color/black"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/num_back"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/t9_key_4"
                            android:textSize="23sp"
                            android:text="4"
                            android:textColor="@color/black"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/num_back"/>

                        <Button
                            android:id="@+id/t9_key_5"
                            android:textSize="23sp"
                            android:text="5"
                            android:textColor="@color/black"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/num_back"/>

                        <Button
                            android:id="@+id/t9_key_6"
                            android:textSize="23sp"
                            android:text="6"
                            android:textColor="@color/black"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/num_back"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/t9_key_7"
                            android:textSize="23sp"
                            android:text="7"
                            android:textColor="@color/black"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/num_back"/>

                        <Button
                            android:id="@+id/t9_key_8"
                            android:textSize="23sp"
                            android:text="8"
                            android:textColor="@color/black"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/num_back"/>

                        <Button
                            android:id="@+id/t9_key_9"
                            android:textSize="23sp"
                            android:text="9"
                            android:textColor="@color/black"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/num_back"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal">


                        <Button
                            android:id="@+id/bt_home"
                            android:textSize="23sp"
                            android:text="건너뛰기"
                            android:textColor="@color/white"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@color/default_blue"/>

                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/num_back">



                            <ImageView
                                android:id="@+id/t9_key_backspace"
                                android:layout_width="60dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/bt_forward"/>


                        </RelativeLayout>



                        <Button
                            android:id="@+id/t9_key_0"
                            android:textSize="23sp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/num_back"/>

                        <Button
                            android:id="@+id/t9_key_clear"
                            android:textSize="23sp"
                            android:text="clear"
                            android:textColor="@color/black"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/num_back"/>


                        <Button
                            android:id="@+id/bt_send_sms"
                            android:textSize="23sp"
                            android:text="확인"
                            android:textColor="@color/white"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bt_red"/>

                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>




            <LinearLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:background="@drawable/pos_back_black"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/order_title"/>



                    <Button
                        android:id="@+id/bt_bluetuooth"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/default_blue"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:text="프린터 설정"
                        android:layout_marginRight="130dp"/>


                    <Button
                        android:id="@+id/bt_print"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/calendar_day_today_line_color_s"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:text="주문번호 출력"
                        android:layout_marginRight="30dp"/>




                </RelativeLayout>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_weight="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white">

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerview_order"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="false"
                                />



                            <com.daimajia.slider.library.SliderLayout
                                android:id="@+id/sl_ad"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">



                            </com.daimajia.slider.library.SliderLayout>



                        </RelativeLayout>






                        <LinearLayout
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="26dip"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:id="@+id/status_title"
                                android:layout_width="wrap_content"
                                android:layout_height="20dip"
                                android:layout_margin="3dip"
                                />
                            <TextView
                                android:id="@+id/status_text"
                                android:layout_width="match_parent"
                                android:layout_height="20dip"
                                android:layout_margin="3dp">

                            </TextView>
                        </LinearLayout>



                    </LinearLayout>




                    <RelativeLayout
                        android:id="@+id/ril1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_weight="2">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >





                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="10"
                                android:orientation="vertical">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_order_num_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:textSize="19sp"
                                        android:textColor="#f4bc76"
                                        android:text="주문번호"/>


                                    <TextView
                                        android:id="@+id/tv_order_num"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="51sp"
                                        android:text="sdjfls"/>


                                </LinearLayout>




                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:textSize="19sp"
                                        android:textColor="#f4bc76"
                                        android:text="총메뉴수량"/>


                                    <TextView
                                        android:id="@+id/tv_total_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="right|center_vertical"
                                        android:textColor="@color/white"
                                        android:textSize="51sp"
                                        android:text="5 개"/>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:textColor="#f4bc76"
                                        android:textSize="19sp"
                                        android:text="총금액"/>

                                    <TextView
                                        android:id="@+id/tv_total_price"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="right|center_vertical"
                                        android:textColor="@color/white"
                                        android:textSize="51sp"
                                        android:text="10000원"/>



                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:weightSum="1">



                                    <Button
                                        android:id="@+id/bt_notice_other"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/popup_progress_text_color"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="3dp"
                                        android:layout_marginRight="3dp"
                                        android:textColor="@color/white"
                                        android:textSize="17sp"
                                        android:text="가맹점 자진발급"/>



                                    <TextView
                                        android:visibility="gone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="카드로 결제 되었습니다."
                                        android:textColor="#80c7b0"/>


                                    <TextView
                                        android:visibility="gone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="주문시간"
                                        android:textColor="#fd5126"/>






                                </LinearLayout>


                            </LinearLayout>




                        </LinearLayout>



                    </RelativeLayout>





                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

















        
        






    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rl_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone"
        android:clickable="true">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/progress" >
        </ProgressBar>


        <TextView
            android:layout_below="@id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="잠시만 기다려 주세요..."/>




    </RelativeLayout>







    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="신용" />

                <Button
                    android:id="@+id/btnCreditCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btnCredit"
                    android:text="신용취소" />

                <Button
                    android:id="@+id/btnCash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btnCreditCancel"
                    android:text="현금승인" />

                <Button
                    android:id="@+id/btnCashCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btnCash"
                    android:text="현금취소" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnReprint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btnCashCancel"
                    android:text="인쇄" />

                <Button
                    android:id="@+id/btnDongleReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btnReprint"
                    android:text="등록" />

                <Button
                    android:id="@+id/btnLastQuery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_below="@+id/btnDongleReg"
                    android:text="재 조회" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="승인번호" />

                <EditText
                    android:id="@+id/edtAuthNo"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="승인일시" />

                <EditText
                    android:id="@+id/edtAuthDate"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래번호" />

                <EditText
                    android:id="@+id/edtTranNo"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:text="2000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/TextAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="금액" />


                <EditText
                    android:id="@+id/EditTextAmount"
                    android:textSize="12sp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:inputType="numberDecimal"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/TextCATID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CATID" />


                <EditText
                    android:id="@+id/EditTextCATID"
                    android:textSize="12sp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:inputType="numberDecimal"
                    android:text="1079518001"/>

                <TextView
                    android:id="@+id/TextCompanyNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPNO" />

                <EditText
                    android:id="@+id/EditTextCompanyNO"
                    android:textSize="12sp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:inputType="numberDecimal"
                    android:text=""/>

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TextNoCVM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOCVM" />


                <EditText
                    android:id="@+id/EditTextNoCVM"
                    android:textSize="12sp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:inputType="numberDecimal"
                    />

                <TextView
                    android:id="@+id/TextPaperPrint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종이영수증" />


                <EditText
                    android:id="@+id/EditTextPaperPrint"
                    android:textSize="12sp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:inputType="numberDecimal"
                    />

                <TextView
                    android:id="@+id/TextNFC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NFC사용여부" />


                <EditText
                    android:id="@+id/EditTextNFC"
                    android:textSize="12sp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:inputType="numberDecimal"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner2"
                    android:textSize="12sp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    />

                <Spinner
                    android:id="@+id/spinner3"
