<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:visibility="gone"
        android:gravity="right">

        <Button
            android:id="@+id/question_cancle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="right"
            android:layout_gravity="right"
            />

    </LinearLayout>





    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="700dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="10">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/black"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="45sp"
                android:text="결제가 완료되었습니다."/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="45sp"
                android:text="주문이 정상 접수되었습니다."/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/default_blue"
                android:textSize="33sp"
                android:textStyle="bold"
                android:text="주문번호"/>



            <TextView
                android:id="@+id/tv_notice_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="50sp"
                android:text="주문번호"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >




            <Button
                android:id="@+id/bt_notice_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/defaul_red"
                android:layout_weight="5"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="주문번호를 기억해 주세요."/>






        </LinearLayout>




    </LinearLayout>






</LinearLayout>